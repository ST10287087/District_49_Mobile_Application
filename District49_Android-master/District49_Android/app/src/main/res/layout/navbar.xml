<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="#A7A8E4"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageButton
        android:id="@+id/nav_btn_arrow_back"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="Arrow Back"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navbar_arrow_back"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/nav_btn_plus_circle"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="Plus Circle"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navbar_plus_circle"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/nav_btn_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="Home"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navbar_home" />

    <ImageButton
        android:id="@+id/nav_btn_notifications"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="Notifications"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navbar_notifications"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/nav_btn_profile"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="Profile"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navbar_profile"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>
