<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99B9DF"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imgGrassLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/menu_grassleft" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="126dp"
        android:layout_height="186dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="2dp"
        android:src="@drawable/menu_updatedlogo22" />

    <!-- Clouds (animated) -->
    <ImageView
        android:id="@+id/imgCloudLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="20dp"
        android:translationY="129dp"
        android:src="@drawable/menu_cloudleft" />

    <ImageView
        android:id="@+id/imgCloudRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="-40dp"
        android:translationY="106dp"
        android:src="@drawable/menu_cloudright" />

    <!-- Pole (animated) -->
    <ImageView
        android:id="@+id/imgPole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="302dp"
        android:src="@drawable/menu_pole" />

    <ImageView
        android:id="@+id/imgGrassRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/menu_grassright" />

    <!-- Profile and Search (no animation) -->
    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="46dp"
        android:layout_height="63dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="profile"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_profile"
        android:translationX="-20dp"
        android:translationY="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="45dp"
        android:layout_height="89dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="-10dp"
        android:translationX="-60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="search"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/menu_search" />

    <!-- Main Menu Buttons (animate in: alpha=0, visibility=invisible) -->
    <ImageButton
        android:id="@+id/btnAbout"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="about"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_about"
        android:translationX="75dp"
        android:translationY="347dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnDonate"
        android:layout_width="153dp"
        android:layout_height="38dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="donate"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_donate"
        android:translationX="-55dp"
        android:translationY="394dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnVolunteer"
        android:layout_width="153dp"
        android:layout_height="38dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="volunteer"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_donate"
        android:translationY="309dp"
        android:translationX="-55dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnContact"
        android:layout_width="196dp"
        android:layout_height="38dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="contact"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_contact"
        android:translationX="60dp"
        android:translationY="435dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnTeam"
        android:layout_width="137dp"
        android:layout_height="41dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="team"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_meettheteam"
        android:translationX="-65dp"
        android:translationY="486dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnSuccess"
        android:layout_width="143dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="531dp"
        android:translationX="65dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="success_stories"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/menu_successstories"
        android:alpha="0"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btnGallery"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="gallery"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_gallery"
        android:translationX="-52dp"
        android:translationY="589dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnEvents"
        android:layout_width="135dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="649dp"
        android:translationX="-45dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="events"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/menu_events"
        android:alpha="0"
        android:visibility="invisible" />

    <!-- Menu button (top left, no animation needed) -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="29dp"
        android:layout_height="108dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="menu"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_menu2"
        android:translationX="16dp"
        android:translationY="-21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
