<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="768dp"
        android:layout_height="1085dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_phonebackground07" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="152dp"
        android:layout_height="181dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="129dp"
        android:translationY="30dp"
        app:srcCompat="@drawable/home_updatedlogo22" />

    <ImageView
        android:id="@+id/imgMainRectangle"
        android:layout_width="389dp"
        android:layout_height="338dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="191dp"
        app:srcCompat="@drawable/home_rectangle40" />

    <ImageButton
        android:id="@+id/btnNewsAnnouncements"
        android:layout_width="237dp"
        android:layout_height="118dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="16dp"
        android:translationY="370dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="news_announcements"
        android:scaleType="fitCenter"
        android:src="@drawable/home_news_anouncements_button" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="51dp"
        android:translationY="386dp"
        android:text="5 May 2025" />

    <ImageButton
        android:id="@+id/btnRectangle42"
        android:layout_width="133dp"
        android:layout_height="116dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="260dp"
        android:translationY="369dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="rectangle_42"
        android:scaleType="fitCenter"
        android:src="@drawable/home_rectangle42" />

    <ImageButton
        android:id="@+id/btnUpcomingEvents"
        android:layout_width="189dp"
        android:layout_height="131dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="28dp"
        android:translationY="529dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="upcoming_events"
        android:scaleType="fitCenter"
        android:src="@drawable/home_upcoming_events" />

    <ImageButton
        android:id="@+id/btnDonationHistory"
        android:layout_width="176dp"
        android:layout_height="227dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="224dp"
        android:translationY="529dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="donation_history"
        android:scaleType="fitCenter"
        android:src="@drawable/home_donation_history" />

    <ImageButton
        android:id="@+id/btnIncentives"
        android:layout_width="171dp"
        android:layout_height="71dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="28dp"
        android:translationY="685dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="incentives"
        android:scaleType="fitCenter"
        android:src="@drawable/home_incentives" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="52dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="11dp"
        android:translationY="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="menu"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_menu2" />

    <ImageButton
        android:id="@+id/btnProfile"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="profile"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_profile"
        android:translationX="349dp"
        android:translationY="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="search"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_search"
        android:translationX="312dp"
        android:translationY="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- "Hello, User" -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, User"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:translationX="-30dp"
        android:translationY="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235" />

    <!-- Search bar with right search icon -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:translationY="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@android:color/white"
        app:boxCornerRadiusTopStart="36dp"
        app:boxCornerRadiusTopEnd="36dp"
        app:boxCornerRadiusBottomStart="36dp"
        app:boxCornerRadiusBottomEnd="36dp"
        app:endIconMode="custom"
        app:endIconDrawable="@android:drawable/ic_menu_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:paddingEnd="8dp"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="#888888" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
