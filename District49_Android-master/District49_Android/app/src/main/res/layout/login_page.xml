<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ImageView
        android:id="@+id/Loginline"
        android:layout_width="533dp"
        android:layout_height="824dp"
        android:src="@drawable/login_extra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/LoginBlockImage"
        android:layout_width="384dp"
        android:layout_height="563dp"
        android:src="@drawable/login_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <ImageButton
        android:id="@+id/loginButton"
        android:layout_width="244dp"
        android:layout_height="49dp"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBlockImage"
        app:layout_constraintEnd_toEndOf="@+id/LoginBlockImage"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="@+id/LoginBlockImage"
        app:layout_constraintTop_toTopOf="@+id/LoginBlockImage"
        app:layout_constraintVertical_bias="0.246" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBlockImage"
        app:layout_constraintEnd_toEndOf="@+id/LoginBlockImage"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="@+id/LoginBlockImage"
        app:layout_constraintTop_toTopOf="@+id/LoginBlockImage"
        app:layout_constraintVertical_bias="0.394" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:background="@drawable/shading_box"
        android:ems="10"
        android:hint="    Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="#999999"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBlockImage"
        app:layout_constraintEnd_toEndOf="@+id/LoginBlockImage"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/LoginBlockImage"
        app:layout_constraintTop_toTopOf="@+id/LoginBlockImage"
        app:layout_constraintVertical_bias="0.318" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:background="@drawable/rounded_text"
        android:ems="10"
        android:hint="    Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#999999"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBlockImage"
        app:layout_constraintEnd_toEndOf="@+id/LoginBlockImage"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/LoginBlockImage"
        app:layout_constraintTop_toTopOf="@+id/LoginBlockImage"
        app:layout_constraintVertical_bias="0.469" />

    <CheckBox
        android:id="@+id/rememberCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Remember Me"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702" />

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="Forgot Password?"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBlockImage"
        app:layout_constraintEnd_toEndOf="@+id/LoginBlockImage"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="@+id/LoginBlockImage"
        app:layout_constraintTop_toTopOf="@+id/LoginBlockImage"
        app:layout_constraintVertical_bias="0.583" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="138dp"
        android:layout_height="215dp"
        android:translationY="-63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/forgotpassword_updatedlogo22" />


</androidx.constraintlayout.widget.ConstraintLayout>