<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SuccessStoriesActivity">

    <!-- Background -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/successstoriesbackgroundlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo -->

    <!-- Blue box -->

    <ImageView
        android:id="@+id/osLogo"
        android:layout_width="126dp"
        android:layout_height="186dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/final_logo"
        android:translationY="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="95dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/successstorieslogo" />

    <LinearLayout
        android:id="@+id/story_box"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/bg_story_box"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pull handle -->
        <View
            android:id="@+id/pull_handle"
            android:layout_width="70dp"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_pull_handle" />

        <!-- Story title -->
        <TextView
            android:id="@+id/story_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:paddingBottom="6dp" />

        <!-- Scrollable body -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <TextView
                android:id="@+id/story_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:textAlignment="center" />
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navbar -->
    <RelativeLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#DEDEDE"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/nav_btn_arrow_back"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/arrow_back"
                android:scaleType="centerInside"
                app:tint="#FF9800"
                app:srcCompat="@drawable/navbar_arrow_back" />

            <ImageButton
                android:id="@+id/nav_btn_plus_circle"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/plus_circle"
                android:scaleType="centerInside"
                app:tint="#FF9800"
                app:srcCompat="@drawable/navbar_plus_circle" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/nav_btn_notifications"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/notifications"
                android:scaleType="centerInside"
                app:tint="#FF9800"
                app:srcCompat="@drawable/navbar_notifications" />

            <ImageButton
                android:id="@+id/nav_btn_profile"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/profile"
                android:scaleType="centerInside"
                app:tint="#FF9800"
                app:srcCompat="@drawable/navbar_profile" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/nav_btn_home_container"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/bottom_nav_bar"
            android:layout_marginTop="-27dp"
            android:background="@drawable/home_button_gray_circle"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/nav_btn_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/home"
                android:padding="18dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/navbar_home"
                app:tint="#FF9800" />
        </FrameLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
