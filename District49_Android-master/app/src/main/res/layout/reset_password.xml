<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE9C6"
    tools:context=".ResetPassword">

    <!-- Logo Image -->

    <!-- Glass Block Background -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="126dp"
        android:layout_height="186dp"
        android:layout_marginTop="56dp"
        android:translationY="-63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/final_logo" />

    <ImageView
        android:id="@+id/glassBlockImage"
        android:layout_width="352dp"
        android:layout_height="512dp"
        android:translationY="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forgotpassword_glassblock" />

    <!-- Password Reset Title Banner -->
    <ImageView
        android:id="@+id/passwordResetTitleImage"
        android:layout_width="237dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationY="243dp"
        app:srcCompat="@drawable/forgotpassword_passwordreset" />

    <ImageButton
        android:id="@+id/btnResetPassword"
        android:layout_width="244dp"
        android:layout_height="49dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        android:translationY="629dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/forgotpassword_buttongroup"
        android:contentDescription="resetpassword"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />



    <!-- Old Password Label -->
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationY="331dp"
        android:translationX="120dp" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/fieldEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:translationY="363dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

