<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/orbitItemRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Rounded container we will scale (not the ImageView) -->
    <FrameLayout
        android:id="@+id/photoCard"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:background="@drawable/bg_round_image"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="team member photo"
            tools:src="@drawable/meettheteam_person"/>
    </FrameLayout>

    <!-- Name below the photo -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Name"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/bg_text_rounded"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/photoCard"
        app:layout_constraintStart_toStartOf="@id/photoCard"
        app:layout_constraintEnd_toEndOf="@id/photoCard" />

    <!-- Role below name -->
    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:background="@drawable/bg_text_rounded"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="@id/photoCard"
        app:layout_constraintEnd_toEndOf="@id/photoCard"
        tools:visibility="visible" />

    <!-- Admin buttons to the right -->
    <LinearLayout
        android:id="@+id/adminBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp"
        tools:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/photoCard"
        app:layout_constraintTop_toTopOf="@id/photoCard"
        app:layout_constraintBottom_toBottomOf="@id/tvRole">

        <!-- Add: white icon on colored circle -->
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:contentDescription="add member here"
            android:background="@drawable/bg_admin_btn"
            android:backgroundTintMode="src_in"
            app:srcCompat="@drawable/ic_add_circle"
            app:tint="#FFFFFFFF"
            android:scaleType="centerInside"
            tools:ignore="TouchTargetSizeCheck" />

        <Space
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <!-- Trash: DARK tint so itâ€™s visible on light/colored circle -->
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:contentDescription="remove this member"
            android:background="@drawable/bg_admin_btn"
            android:backgroundTintMode="src_in"
            app:srcCompat="@drawable/meettheteam_trash"
            app:tint="#111111"
            android:scaleType="centerInside"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
