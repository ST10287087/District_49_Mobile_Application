<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opening_logo_background"
    tools:context=".MainActivity">

    <!-- Optional: Add a subtle indicator for swipe up -->
    <TextView
        android:id="@+id/swipe_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe up to continue"
        android:textColor="#80FFFFFF"
        android:textSize="16sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp" />


    <ImageView
        android:id="@+id/swipe_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/arrow_up_float"
        app:tint="#80FFFFFF"
        android:alpha="0.7"
        app:layout_constraintBottom_toTopOf="@id/swipe_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>