<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Darker black shadow layer (left side) -->
    <item
        android:right="3dp"
        android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="#60000000" />
        </shape>
    </item>

    <!-- Another shadow layer for softer effect -->
    <item
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
        </shape>
    </item>

    <!-- Main gray circle -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="oval">
            <!-- Gray circle background matching navbar -->
            <solid android:color="#DEDEDE" />

            <!-- Optional subtle gradient for depth -->
            <gradient
                android:type="radial"
                android:gradientRadius="35dp"
                android:startColor="#DEDEDE"
                android:endColor="#CECECE" />
        </shape>
    </item>

</layer-list>